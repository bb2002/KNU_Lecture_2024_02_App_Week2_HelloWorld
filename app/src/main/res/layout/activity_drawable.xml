<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/happyEditor"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_drawable"
    tools:context=".DrawableActivity">
    <ImageButton
        android:id="@+id/firstButton"
        android:src="@drawable/valorant"
        android:scaleType="centerInside"
        android:layout_width="150dp"
        android:layout_height="150dp" />
    <ImageView
        android:id="@+id/secondButton"
        android:src="@drawable/valorant"
        android:scaleType="centerInside"
        android:clickable="true"
        android:focusable="true"
        android:layout_width="150dp"
        android:layout_height="150dp" />
    <Button
        android:id="@+id/thirdButton"
        android:background="@drawable/valorant"
        app:backgroundTint="@null"
        android:scaleType="center"
        android:layout_width="150dp"
        android:layout_height="150dp" />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/rect_drawable" />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/border_drawable" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/border_drawable"
        app:backgroundTint="@null"
        android:text="메롱"/>
</LinearLayout>